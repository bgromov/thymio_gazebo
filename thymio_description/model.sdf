<?xml version="1.0"?>
<sdf version="1.4">
  <model name="thymio">
    <!--static>true</static-->
    <pose>0 0 0.0305 0 0 0</pose>
    <link name="body">
      <inertial>
        <mass>0.200</mass>
        <inertia>
          <!-- box inertials -->
          <!-- ixx = mass * (y*y + z*z) / 12 -->
          <ixx>0.00024282</ixx>
          <ixy>0.0</ixy>
          <ixz>0.0</ixz>
          <!-- iyy = mass * (x*x + z*z) / 12 -->
          <iyy>0.00023542</iyy>
          <iyz>0.0</iyz>
          <!-- izz = mass * (x*x + y*y) / 12 -->
          <izz>0.00041073</izz>
        </inertia>
      </inertial>
      <self_collide>true</self_collide>
      <collision name="collision_body">
        <!--pose>0 0 0.0225 0 0 0</pose-->
        <geometry>
          <!--box>
            <size>0.110 0.112 0.045</size>
          </box-->
          <mesh>
            <uri>model://thymio/meshes/thymio_body_collision.dae</uri>
          </mesh>
        </geometry>
      </collision>
      <collision name="collision_caster">
        <pose>0.035 0 0 0 0 0</pose>
        <geometry>
          <sphere>
            <radius>0.009</radius>
          </sphere>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>0</mu>
              <mu2>0</mu2>
              <slip1>1.0</slip1>
              <slip2>1.0</slip2>
            </ode>
          </friction>
        </surface>
      </collision>
      <visual name="visual_body">
        <geometry>
          <mesh>
            <uri>model://thymio/meshes/thymio_body.dae</uri>
          </mesh>
        </geometry>
      </visual>
      <visual name="visual_proximity_sensors">
        <material>
          <ambient>0.03 0.03 0.03 1.0</ambient>
          <diffuse>0.3 0.3 0.3 1.0</diffuse>
        </material>
        <geometry>
          <mesh>
            <uri>model://thymio/meshes/thymio_proximity_sensors.dae</uri>
          </mesh>
        </geometry>
      </visual>
    </link>
    <link name="proximity_0">
      <pose>0.055 0 0.025 0 0 0</pose>
      <inertial><mass>0.00001</mass></inertial>
      <sensor type="ray" name="proximity_sensor_0">
        <visualize>true</visualize>
        <update_rate>15</update_rate>
        <always_on>true</always_on>
        <ray>
          <range>
            <min>0.010</min>
            <max>0.200</max>
            <resolution>0.01</resolution>
          </range>
          <noise>
            <type>gaussian</type>
            <mean>0.0</mean>
            <stddev>0.01</stddev>
          </noise>
        </ray>
        <plugin name="proximity_sensor_0_controller" filename="libgazebo_ros_range.so">
          <alwaysOn>true</alwaysOn>
          <updateRate>15</updateRate>
          <robotNamespace>thymio</robotNamespace>
          <radiation>infrared</radiation>
        </plugin>
      </sensor>
    </link>
    <joint type="revolute" name="proximity_0_joint">
      <parent>body</parent>
      <child>proximity_0</child>
      <axis>
        <xyz>0 0 1</xyz>
        <limit>
          <lower>0.0</lower>
          <upper>0.0</upper>
        </limit>
      </axis>
    </joint>
    <link name="left_wheel">
      <pose>-0.025 0.047 0.013 0 0 0</pose>
      <inertial>
        <mass>0.025</mass>
        <inertia>
          <!-- cylinder along Y-axis -->
          <!-- ixx = mass * ( h*h / 12 + r*r / 4) -->
          <ixx>0.00000363</ixx>
          <ixy>0.0</ixy>
          <ixz>0.0</ixz>
          <!-- iyy = mass * (r*r) / 2 -->
          <iyy>0.00000605</iyy>
          <iyz>0.0</iyz>
          <!-- izz = mass * ( h*h / 12 + r*r / 4) -->
          <izz>0.00000363</izz>
        </inertia>
      </inertial>
      <collision name="collision_left_wheel">
        <pose>0 0.00075 0 1.5707 0 0</pose>
        <!--pose>0 0.020 0 1.5707 0 0</pose-->
        <geometry>
          <cylinder>
            <radius>0.022</radius>
            <length>0.017</length>
          </cylinder>
        </geometry>
      </collision>
      <visual name="visual_left_wheel">
        <material>
          <ambient>0.03 0.03 0.03 1.0</ambient>
          <diffuse>0.3 0.3 0.3 1.0</diffuse>
        </material>
        <geometry>
          <mesh>
            <uri>model://thymio/meshes/thymio_left_wheel.dae</uri>
          </mesh>
        </geometry>
      </visual>
    </link>
    <link name="right_wheel">
      <pose>-0.025 -0.047 0.013 0 0 0</pose>
      <inertial>
        <mass>0.025</mass>
        <inertia>
          <!-- cylinder along Y-axis -->
          <!-- ixx = mass * ( h*h / 12 + r*r / 4) -->
          <ixx>0.00000363</ixx>
          <ixy>0.0</ixy>
          <ixz>0.0</ixz>
          <!-- iyy = mass * (r*r) / 2 -->
          <iyy>0.00000605</iyy>
          <iyz>0.0</iyz>
          <!-- izz = mass * ( h*h / 12 + r*r / 4) -->
          <izz>0.00000363</izz>
        </inertia>
      </inertial>
      <collision name="collision_right_wheel">
        <pose>0 -0.00075 0 1.5707 0 0</pose>
        <!--pose>0 -0.020 0 1.5707 0 0</pose-->
        <geometry>
          <cylinder>
            <radius>0.022</radius>
            <length>0.017</length>
          </cylinder>
        </geometry>
      </collision>
      <visual name="visual_right_wheel">
        <material>
          <ambient>0.03 0.03 0.03 1.0</ambient>
          <diffuse>0.3 0.3 0.3 1.0</diffuse>
        </material>
        <geometry>
          <mesh>
            <uri>model://thymio/meshes/thymio_right_wheel.dae</uri>
          </mesh>
        </geometry>
      </visual>
    </link>
    <joint type="revolute" name="left_wheel_hinge">
      <!--pose>-0.025 -0.04775 0.013</pose-->
      <child>left_wheel</child>
      <parent>body</parent>
      <axis>
        <xyz>0 1 0</xyz>
      </axis>
    </joint>
    <joint type="revolute" name="right_wheel_hinge">
      <!--pose>-0.025 0.04775 0.013</pose-->
      <child>right_wheel</child>
      <parent>body</parent>
      <axis>
        <xyz>0 1 0</xyz>
      </axis>
    </joint>
    <plugin name="differential_drive_controller" filename="libgazebo_ros_diff_drive.so">
      <alwaysOn>true</alwaysOn>
      <updateRate>100</updateRate>
      <leftJoint>right_wheel_hinge</leftJoint>
      <rightJoint>left_wheel_hinge</rightJoint>
      <wheelSeparation>0.0955</wheelSeparation>
      <wheelDiameter>0.044</wheelDiameter>
      <torque>0.005</torque>
      <commandTopic>cmd_vel</commandTopic>
      <odometryTopic>odom</odometryTopic>
      <odometryFrame>odom</odometryFrame>
      <robotBaseFrame>base_footprint</robotBaseFrame>
    </plugin>
  </model>
</sdf>
